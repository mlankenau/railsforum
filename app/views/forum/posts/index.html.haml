%h1 Listing forum_posts

%table
  %tr
    %th Forum thread
    %th Subject
    %th Body
    %th Author
    %th
    %th
    %th

  - @forum_posts.each do |forum_post|
    %tr
      %td= forum_post.thread_id
      %td= forum_post.subject
      %td= forum_post.body
      %td= forum_post.author
      %td= link_to 'Show', forum_post
      %td= link_to 'Edit', edit_forum_post_path(forum_post)
      %td= link_to 'Destroy', forum_post, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Post', new_forum_post_path
