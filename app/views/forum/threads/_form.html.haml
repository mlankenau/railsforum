= form_for @forum_thread do |f|
  - if @forum_thread.errors.any?
    #error_explanation
      %h2= "#{pluralize(@forum_thread.errors.count, "error")} prohibited this forum_thread from being saved:"
      %ul
        - @forum_thread.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :creator
    = f.number_field :creator
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :forum_id
    = f.number_field :forum_id
  .actions
    = f.submit 'Save'
